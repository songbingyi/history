.list-box {
    display: flex;
    flex-direction: column;
    padding: 0 20rpx;
    margin-bottom: 14rpx;
}

.list-title {
    font-size: 38rpx;
    margin-bottom: 8rpx;
}

.list-time {
    position: absolute;
    right: 20rpx;
    font-size: 28rpx;
    color: #9e9e9e;
}

.list-content {
    font-size: 30rpx;
    color: #9e9e9e;
}

.sp-line {
    border-bottom: 1px solid #d0d0d0; height: 14rpx;
}
